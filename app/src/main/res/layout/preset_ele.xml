<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_charge_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/shape_white_bg"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/preset_charging"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/size_content_sp_14" />


        <EditText
            android:id="@+id/et_cvalue_duration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center"
            android:text="90"
            android:textColor="@color/color_text_33"
            android:textSize="@dimen/size_content_sp_14" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:src="@drawable/icon_chevron"
            android:text="@string/m60_kw"
            android:textColor="@color/color_text_33"
            android:textSize="@dimen/size_content_sp_12" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_time_on"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/shape_white_bg"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/time_on"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/size_content_sp_14" />


        <EditText
            android:id="@+id/et_duration_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center"
            android:text="2029-01-05"
            android:textColor="@color/color_text_33"
            android:textSize="@dimen/size_content_sp_14" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_chevron" />


    </LinearLayout>


</LinearLayout>